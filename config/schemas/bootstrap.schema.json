{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pensine Bootstrap Configuration",
  "description": "Configuration locale de démarrage de Pensine (stockée dans localStorage)",
  "type": "object",
  "required": ["version", "storageMode"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Version du format de configuration",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "storageMode": {
      "type": "string",
      "description": "Mode de stockage des données",
      "enum": ["github", "local-git", "local"]
    },
    "credentials": {
      "type": "object",
      "description": "Identifiants selon le mode de stockage",
      "oneOf": [
        {
          "title": "GitHub Storage",
          "required": ["owner", "repo", "token"],
          "properties": {
            "owner": {
              "type": "string",
              "description": "Nom d'utilisateur GitHub"
            },
            "repo": {
              "type": "string",
              "description": "Nom du repository"
            },
            "token": {
              "type": "string",
              "description": "Token d'accès GitHub (ghp_...)"
            }
          }
        },
        {
          "title": "Local Git Storage",
          "required": ["repoPath"],
          "properties": {
            "repoPath": {
              "type": "string",
              "description": "Chemin vers le repository local"
            }
          }
        }
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Date de dernière modification"
    }
  }
}
